{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.airnub.dev/workflow-definition.json",
  "type": "object",
  "required": ["id", "version", "title", "steps"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "locale": { "type": "string" },
    "jurisdiction": { "type": "string" },
    "industry": { "type": "string" },
    "metadata": { "type": "object", "additionalProperties": true },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/WorkflowStep" }
    },
    "edges": {
      "type": "array",
      "items": { "$ref": "#/definitions/WorkflowEdge" }
    }
  },
  "definitions": {
    "Execution": {
      "type": "object",
      "required": ["mode"],
      "additionalProperties": false,
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "manual",
            "temporal",
            "external:webhook",
            "external:websocket"
          ]
        },
        "workflow": { "type": "string" },
        "taskQueue": { "type": "string" },
        "defaultTaskQueue": { "type": "string" },
        "tenantId": { "type": "string" },
        "config": { "$ref": "#/definitions/ExecutionConfig" },
        "input_schema": { "type": "string" },
        "permissions": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "secret_aliases": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "secrets": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "externalWebhook": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "allOf": [
        {
          "if": { "properties": { "mode": { "const": "temporal" } } },
          "then": {
            "anyOf": [
              { "required": ["workflow"] },
              {
                "properties": {
                  "config": {
                    "type": "object",
                    "required": ["workflow"],
                    "properties": {
                      "workflow": { "type": "string" }
                    }
                  }
                }
              }
            ]
          }
        },
        {
          "if": { "properties": { "mode": { "const": "external:webhook" } } },
          "then": {
            "properties": {
              "config": {
                "type": "object",
                "required": ["method", "urlAlias"],
                "properties": {
                  "method": {
                    "type": "string",
                    "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
                  },
                  "urlAlias": { "type": "string" },
                  "tokenAlias": { "type": "string" },
                  "path": { "type": "string" },
                  "headers": {
                    "type": "object",
                    "additionalProperties": { "type": "string" }
                  },
                  "signing": {
                    "type": "object",
                    "required": ["algo", "secretAlias"],
                    "properties": {
                      "algo": { "type": "string", "enum": ["hmac-sha256"] },
                      "secretAlias": { "type": "string" }
                    },
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false
              }
            },
            "required": ["config"]
          }
        },
        {
          "if": { "properties": { "mode": { "const": "external:websocket" } } },
          "then": {
            "properties": {
              "config": {
                "type": "object",
                "required": ["urlAlias"],
                "properties": {
                  "urlAlias": { "type": "string" },
                  "tokenAlias": { "type": "string" },
                  "messageSchema": { "type": "string" },
                  "temporalWorkflow": { "type": "string" },
                  "defaultTaskQueue": { "type": "string" },
                  "taskQueueOverride": { "type": "string" },
                  "tenantId": { "type": "string" }
                },
                "additionalProperties": false
              }
            },
            "required": ["config"]
          }
        }
      ]
    },
    "ExecutionConfig": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "workflow": { "type": "string" },
        "taskQueue": { "type": "string" },
        "defaultTaskQueue": { "type": "string" },
        "tenantId": { "type": "string" }
      }
    },
    "VerificationRule": {
      "type": "object",
      "required": ["rule"],
      "additionalProperties": false,
      "properties": {
        "rule": { "type": "string", "minLength": 1 },
        "level": { "type": "string", "enum": ["error", "warning"] },
        "message_i18n": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "WorkflowStep": {
      "type": "object",
      "required": ["id", "kind"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "kind": { "type": "string", "minLength": 1 },
        "title": { "type": "string" },
        "title_i18n": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "description_i18n": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "stepType": { "type": "string" },
        "execution": { "$ref": "#/definitions/Execution" },
        "required": { "type": "boolean" },
        "requires": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "verify": {
          "type": "array",
          "items": { "$ref": "#/definitions/VerificationRule" }
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "url"],
            "additionalProperties": false,
            "properties": {
              "id": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "verified_at": { "type": "string", "format": "date-time" }
            }
          }
        },
        "metadata": { "type": "object", "additionalProperties": true }
      }
    },
    "WorkflowEdge": {
      "type": "object",
      "required": ["from", "to"],
      "additionalProperties": false,
      "properties": {
        "from": { "type": "string", "minLength": 1 },
        "to": { "type": "string", "minLength": 1 },
        "condition": { "type": "string" }
      }
    }
  }
}
