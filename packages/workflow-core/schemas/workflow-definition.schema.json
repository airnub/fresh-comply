{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.airnub.dev/workflow-definition.json",
  "type": "object",
  "required": ["id", "version", "title", "steps"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "locale": { "type": "string" },
    "jurisdiction": { "type": "string" },
    "industry": { "type": "string" },
    "metadata": { "type": "object", "additionalProperties": true },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/WorkflowStep" }
    },
    "edges": {
      "type": "array",
      "items": { "$ref": "#/definitions/WorkflowEdge" }
    }
  },
  "definitions": {
    "Execution": {
      "type": "object",
      "required": ["mode"],
      "additionalProperties": false,
      "properties": {
        "mode": { "type": "string", "enum": ["manual", "temporal", "external"] },
        "workflow": { "type": "string" },
        "taskQueue": { "type": "string" },
        "webhook": { "type": "string", "format": "uri" },
        "input_schema": { "type": "string" },
        "permissions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "secret_aliases": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "allOf": [
        {
          "if": { "properties": { "mode": { "const": "temporal" } } },
          "then": { "required": ["workflow", "taskQueue"] }
        },
        {
          "if": { "properties": { "mode": { "const": "external" } } },
          "then": { "required": ["webhook"] }
        }
      ]
    },
    "VerificationRule": {
      "type": "object",
      "required": ["rule"],
      "additionalProperties": false,
      "properties": {
        "rule": { "type": "string", "minLength": 1 },
        "level": { "type": "string", "enum": ["error", "warning"] },
        "message_i18n": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      }
    },
    "WorkflowStep": {
      "type": "object",
      "required": ["id", "kind"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "kind": { "type": "string", "minLength": 1 },
        "title": { "type": "string" },
        "title_i18n": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "description_i18n": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "execution": { "$ref": "#/definitions/Execution" },
        "required": { "type": "boolean" },
        "requires": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "verify": {
          "type": "array",
          "items": { "$ref": "#/definitions/VerificationRule" }
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "url"],
            "additionalProperties": false,
            "properties": {
              "id": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "verified_at": { "type": "string", "format": "date-time" }
            }
          }
        },
        "metadata": { "type": "object", "additionalProperties": true }
      }
    },
    "WorkflowEdge": {
      "type": "object",
      "required": ["from", "to"],
      "additionalProperties": false,
      "properties": {
        "from": { "type": "string", "minLength": 1 },
        "to": { "type": "string", "minLength": 1 },
        "condition": { "type": "string" }
      }
    }
  }
}
